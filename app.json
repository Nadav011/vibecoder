{
  "expo": {
    "name": "VibeCoder",
    "slug": "vibecoder",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "scheme": "vibecoder",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0D0D0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vibecoder.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0D0D0F"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.vibecoder.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "name": "VibeCoder",
      "shortName": "VibeCoder",
      "description": "ניהול משימות לקודרים - Kanban, Todo, Notes",
      "lang": "he",
      "dir": "rtl",
      "themeColor": "#09090B",
      "backgroundColor": "#09090B",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "any"
    },
    "plugins": ["expo-router"]
  }
}
